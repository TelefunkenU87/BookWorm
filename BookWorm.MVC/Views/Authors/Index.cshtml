@model AuthorViewModel
@{
    ViewData["Title"] = "Authors";
}

<div class="container">
    <div class="row">
        <div class="table-responsive">
            <table class="table table-striped table-hover table-sm"
                   data-toggle="table" data-search="true" data-search-align="left" data-show-columns="false"
                   data-pagination="true" data-pagination-v-align="both">
                <thead class="thead-light">
                    <tr>
                        <th data-sortable="true">Author Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var a in Model.Authors)
                    {
                        if (a.Id > 0)
                        {
                            <tr>
                                <td>
                                    <a class="btn" asp-controller="Authors" asp-action="Details"
                                       asp-route-id="@a.Id">@a.FirstName @a.LastName</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
