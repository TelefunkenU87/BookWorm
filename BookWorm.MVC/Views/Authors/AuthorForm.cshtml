@model AuthorsDTO

<form asp-controller="Authors" asp-action="EditAuthor" method="post" role="form">

    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="@Model.Id" />
    <div class="form-group">
        <label asp-for="@Model.FirstName"></label>
        <input asp-for="@Model.FirstName" maxlength="50" class="form-control" id="AuthorsFirstName" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.LastName"></label>
        <input asp-for="@Model.LastName" maxlength="50" class="form-control" id="AuthorsLastName" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>

</form>