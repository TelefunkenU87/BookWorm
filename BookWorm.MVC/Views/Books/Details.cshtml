@model BooksDTO
@{
}

<div class="card mb-3">
    <div class="row no-gutters">
        <div class="col-md-4">
            <img src="data:image;base64,@Convert.ToBase64String(Model.CoverArt)" class="card-img" />
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
                <p>@Model.AuthorName</p>
                <p class="card-text">@Model.Description</p>
                <p>@Model.SeriesName</p>
                <p>@Model.Rating</p>
            </div>
            <div class="card-body">
                <a href="#" class="card-link">Edit</a>
                <a href="#" class="card-link">Delete</a>
            </div>
        </div>
    </div>
</div>