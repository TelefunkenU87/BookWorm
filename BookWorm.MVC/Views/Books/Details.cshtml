@model BooksDTO
@{
}

<div class="card mb-3">
    <div class="row no-gutters">
        <div class="col-md-4">
            @if(Model.CoverArt != null)
            {
                <img src="data:image;base64,@Convert.ToBase64String(Model.CoverArt)" class="card-img" />
            }
            else
            {
                <img src="~/img/NoCoverArt.jpg" class="card-img" />
            }
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
                <p>@Model.AuthorName</p>
                <p class="card-text">@Model.Description</p>
                <p>@Model.SeriesName</p>
                <p>@Model.Rating</p>
            </div>
            @*<div class="card-body">
                <a href="#" class="card-link">Edit</a>
                <a href="#" class="card-link">Delete</a>
            </div>*@
        <div class="card-footer">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#id-@Model.Id">
                @*<i class="fas fa-edit"></i>*@
                Edit
            </button>
            <div class="modal fade" id="id-@Model.Id" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Edit Book</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <partial name="BookForm" model=@Model />
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            @*<button type="button" class="btn btn-primary">Save changes</button>*@
                        </div>
                    </div>
                </div>
            </div>

            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#del-@Model.Id">
                @*<i class="fa fa-trash-alt"></i>*@
                Delete
            </button>

            <div class="modal fade" id="del-@Model.Id" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Delete Book</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Are you sure you want to book?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <a class="btn btn-danger" asp-controller="Books" asp-action="DeleteBook"
                               asp-route-id="@Model.Id">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </div>
</div>