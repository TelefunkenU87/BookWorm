<div class="table-responsive">
    @*<table class="table table-striped table-hover table-sm" data-toggle="table" data-pagination="true" data-search="true">*@
    <table class="table table-striped table-hover table-sm"
           data-toggle="table" data-search="true" data-search-align="left" data-show-columns="false"
           data-pagination="true" data-pagination-v-align="both">
        <thead class="thead-light">
            <tr>
                <th data-sortable="true">Author Id</th>
                <th data-sortable="true">First Name</th>
                <th data-sortable="true">Last Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in Model)
            {
                <tr>
                    <td>@a.Id</td>
                    <td>@a.FirstName</td>
                    <td>@a.LastName </td>
                </tr>
            }
        </tbody>
    </table>
</div>