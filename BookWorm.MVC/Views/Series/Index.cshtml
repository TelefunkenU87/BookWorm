@model SeriesViewModel
@{
    ViewData["Title"] = "Series";
}

<div class="container">
    <div class="row">
        <div class="table-responsive">
            <table class="table table-striped table-hover table-sm"
                   data-toggle="table" data-search="true" data-search-align="left" data-show-columns="false"
                   data-pagination="true" data-pagination-v-align="both">
                <thead class="thead-light">
                    <tr>
                        <th data-sortable="true">Series Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var s in Model.Series)
                    {
                        if (s.Id > 0)
                        {
                            <tr>
                                <td>
                                    <a class="btn btn-link" asp-controller="Series" asp-action="Details"
                                       asp-route-id="@s.Id">@s.SeriesName</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
